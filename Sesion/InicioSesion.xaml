<Window x:Class="Gym24_7.Sesion.InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym24_7.Sesion" xmlns:inputLayout="http://schemas.syncfusion.com/wpf" xmlns:syncfusion="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Shared.WPF"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" ShowInTaskbar="False"
        Title="Gym24/7 - Iniciar Sesión" Height="700" Width="500">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFF6C365"/>
                        <GradientStop Color="#FFF37BD6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="inputLayout:SfTextInputLayout">
            <Setter Property="Foreground" Value="#FF363030"></Setter>
            <Setter Property="LeadingViewPosition" Value="Inside"></Setter>
            <Setter Property="Width" Value="400"></Setter>
            <Setter Property="ContainerBackground" Value="White"></Setter>
            <Setter Property="FocusedBorderBrush" Value="#FF641464"></Setter>
            <Setter Property="FocusedForeground" Value="#FF641464"></Setter>
        </Style>
        <Style TargetType="inputLayout:SfTextInputLayout" x:Key="CorreoTextInputLayout">
            <Setter Property="Foreground" Value="#FF363030"></Setter>
            <Setter Property="LeadingViewPosition" Value="Inside"></Setter>
            <Setter Property="Width" Value="400"></Setter>
            <Setter Property="ContainerBackground" Value="White"></Setter>
            <Setter Property="FocusedBorderBrush" Value="#FF641464"></Setter>
            <Setter Property="FocusedForeground" Value="#FF641464"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=MensajeError}" Value="El campo 'correo electrónico' debe contener un correo válido.">
                    <Setter Property="BorderBrush" Value="Red"></Setter>
                    <Setter Property="Foreground" Value="Red"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="inputLayout:ButtonAdv">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderBrush" Value="#FF500A50"></Setter>
            <Setter Property="SmallIcon" Value="{x:Null}"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="SizeMode" Value="Normal"></Setter>
            <Setter Property="Label" Value="Iniciar Sesión"></Setter>
            <Setter Property="Width" Value="125"></Setter>
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="FontFamily" Value="Candara"></Setter>
            <Setter Property="Margin" Value="0,15,0,0"></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF641464"/>
                        <GradientStop Color="#FF8E69E3" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="MensajeError">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="FontFamily" Value="Candara"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
            <Setter Property="Background" Value="#FFF6E5F9"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="Margin" Value="15"></Setter>
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Background" Value="{x:Null}"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock" x:Key="Titulo">
            <Setter Property="Text" Value="Bienvenido a Gym24/7"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="Margin" Value="0,30,0,0"></Setter>
            <Setter Property="Foreground" Value="#FF641464"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>
        <Style TargetType="Image">
            <Setter Property="Source" Value="/Sesion/logo.png"></Setter>
            <Setter Property="Width" Value="400"></Setter>
        </Style>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Command="{Binding Path=IniciarSesionCommand}" Key="Enter"/>
    </Window.InputBindings>
    <StackPanel>
        <TextBlock Style="{StaticResource Titulo}"/>
        <Image/>
        <inputLayout:SfTextInputLayout
            Hint="Correo eléctronico"
            Style="{StaticResource CorreoTextInputLayout}">
            <inputLayout:SfTextInputLayout.LeadingView>
                <Image Source="http://icongal.com/gallery/image/77582/envelope_email_mail.png"/>
            </inputLayout:SfTextInputLayout.LeadingView>
            <TextBox Text="{Binding Path=CorreoLogin, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <inputLayout:SfTextInputLayout
            Hint="Contraseña">
            <inputLayout:SfTextInputLayout.LeadingView>
                <Image Source="http://icongal.com/gallery/image/9923/eye_view_see.png"/>
            </inputLayout:SfTextInputLayout.LeadingView>
            <TextBox Text="{Binding Path=ContraseñaLogin, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <TextBlock Style="{StaticResource MensajeError}"
                   Text="{Binding Path=MensajeError, UpdateSourceTrigger=PropertyChanged}">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FF332E2E" ShadowDepth="4" BlurRadius="7"/>
            </TextBlock.Effect>
        </TextBlock>
        <syncfusion:ButtonAdv
            Command="{Binding Path=IniciarSesionCommand}"
            Click="InicioSesionButton_Click">
            <syncfusion:ButtonAdv.Effect>
                <DropShadowEffect ShadowDepth="1" Color="#FF474545" Direction="600" BlurRadius="10"/>
            </syncfusion:ButtonAdv.Effect>
        </syncfusion:ButtonAdv>
    </StackPanel>
</Window>
