<Window x:Class="Gym24_7.VentanasEdicion.EditarEjercicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym24_7.VentanasEdicion" xmlns:inputLayout="http://schemas.syncfusion.com/wpf" xmlns:syncfusion="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Shared.WPF"
        mc:Ignorable="d" ResizeMode="NoResize" ShowInTaskbar="False"
        Title="Editar Ejercicio" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="Titulo">
            <Setter Property="Text" Value="Editar ejercicio"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="FontFamily" Value="Cambria"></Setter>
            <Setter Property="Margin" Value="10,5,5,10"></Setter>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
        <Style TargetType="inputLayout:SfTextInputLayout">
            <Setter Property="FocusedForeground" Value="#FF641464"></Setter>
            <Setter Property="ContainerBackground" Value="#FFF7D4EF"></Setter>
            <Setter Property="FocusedBorderBrush" Value="#FF641464"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="LeadingViewPosition" Value="Inside"></Setter>
        </Style>
        <Style TargetType="inputLayout:ButtonAdv" x:Key="BotonGuardar">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9A0E69" Offset="0.066"/>
                        <GradientStop Color="#FF641464" Offset="0.954"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="SizeMode" Value="Large"></Setter>
            <Setter Property="Label" Value="Guardar"></Setter>
            <Setter Property="Width" Value="125"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderBrush" Value="#FFEE8509"></Setter>
            <Setter Property="IconWidth" Value="0"></Setter>
            <Setter Property="IconHeight" Value="10"></Setter>
            <Setter Property="Content" Value="Guardar"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Stretch"></Setter>
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="Height" Value="41"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontFamily" Value="Sitka Heading"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
        <Style TargetType="inputLayout:ButtonAdv" x:Key="BotonExaminar">
            <Setter Property="SmallIcon" Value="{x:Null}"></Setter>
            <Setter Property="SizeMode" Value="Normal"></Setter>
            <Setter Property="DockPanel.Dock" Value="Right"></Setter>
            <Setter Property="Width" Value="80"></Setter>
            <Setter Property="Height" Value="45"></Setter>
            <Setter Property="Margin" Value="15,5,15,5"></Setter>
            <Setter Property="Label" Value="Examinar"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="FontFamily" Value="Candara"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="#FF641464"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Style="{StaticResource Titulo}"/>
        <inputLayout:SfTextInputLayout
            Hint="Nombre">
            <TextBox Text="{Binding Path=EjercicioEditar.Nombre, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <DockPanel LastChildFill="True">
            <inputLayout:ButtonAdv Style="{StaticResource BotonExaminar}" 
                                   Command="{Binding Path=AbrirExaminarCommand}"/>
            <inputLayout:SfTextInputLayout
                Hint="Imagen">
                <TextBox IsReadOnly="True" Text="{Binding Path=EjercicioEditar.Imagen, UpdateSourceTrigger=PropertyChanged}"/>
            </inputLayout:SfTextInputLayout>
        </DockPanel>
        <inputLayout:SfTextInputLayout
            Hint="Información">
            <TextBox Text="{Binding Path=EjercicioEditar.Informacion, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <syncfusion:ButtonAdv
            Command="{Binding Path=EditarEjercicioCommand}"
            Style="{StaticResource BotonGuardar}"/>
    </StackPanel>
</Window>
