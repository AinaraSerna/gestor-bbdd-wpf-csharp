<Window x:Class="Gym24_7.VentanasEdicion.EditarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym24_7.VentanasEdicion" xmlns:inputLayout="http://schemas.syncfusion.com/wpf" xmlns:syncfusion="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Shared.WPF"
        mc:Ignorable="d" ResizeMode="NoResize" ShowInTaskbar="False"
        Title="Editar Usuario" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="Titulo">
            <Setter Property="Text" Value="Editar usuario"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="FontFamily" Value="Cambria"></Setter>
            <Setter Property="Margin" Value="10,5,5,10"></Setter>
        </Style>
        <Style TargetType="inputLayout:SfTextInputLayout">
            <Setter Property="LeadingViewPosition" Value="Inside"></Setter>
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="ContainerBackground" Value="#FFF7D698"></Setter>
            <Setter Property="FocusedBorderBrush" Value="#FFF37BD6"></Setter>
            <Setter Property="FocusedForeground" Value="#FFF37BD6"></Setter>
            <Setter Property="Width" Value="400"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Margin" Value="5,2,5,2"></Setter>
        </Style>
        <Style TargetType="inputLayout:ButtonAdv">
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF9A0E69" Offset="0.066"/>
                        <GradientStop Color="#FF641464" Offset="0.954"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="SizeMode" Value="Large"></Setter>
            <Setter Property="Label" Value="Guardar"></Setter>
            <Setter Property="Width" Value="125"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderBrush" Value="#FFEE8509"></Setter>
            <Setter Property="IconWidth" Value="0"></Setter>
            <Setter Property="IconHeight" Value="10"></Setter>
            <Setter Property="Content" Value="Guardar"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Stretch"></Setter>
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="Height" Value="41"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontFamily" Value="Sitka Heading"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Style="{StaticResource Titulo}"/>
        <inputLayout:SfTextInputLayout
            Hint="Tipo de usuario">
            <ComboBox ItemsSource="{Binding Path=Roles}" 
                      SelectedValue="{Binding Path=UsuarioEditar.Rol, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <inputLayout:SfTextInputLayout
            Hint="Nombre completo">
            <TextBox Text="{Binding Path=UsuarioEditar.Nombre, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <inputLayout:SfTextInputLayout
            Hint="DNI">
            <TextBox Text="{Binding Path=UsuarioEditar.Dni, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <inputLayout:SfTextInputLayout
            Hint="Correo electrónico">
            <TextBox Text="{Binding Path=UsuarioEditar.Correo, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <inputLayout:SfTextInputLayout
            Hint="Teléfono">
            <TextBox Text="{Binding Path=UsuarioEditar.Telefono, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <inputLayout:SfTextInputLayout
            Hint="Contraseña (cifrada)" Height="57">
            <TextBox Text="{Binding Path=UsuarioEditar.Contraseña, UpdateSourceTrigger=PropertyChanged}"/>
        </inputLayout:SfTextInputLayout>
        <TextBlock
            FontWeight="DemiBold"
            Text="Para cambiar la contraseña, borre la contraseña cifrada y escriba la nueva en texto plano."
            Foreground="Gray" Margin="5,2,0,0"
         />
        <syncfusion:ButtonAdv Command="{Binding Path=EditarUsuarioCommand}" />
    </StackPanel>
</Window>
